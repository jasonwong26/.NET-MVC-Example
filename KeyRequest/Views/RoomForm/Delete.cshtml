@model KeyRequest.ViewModels.RoomForm

@{
    ViewBag.Title = "Delete Room";
}

<h2>@ViewBag.Title</h2>
<h4>@ViewBag.ErrorMessage</h4>
<h4>Are you sure you want to delete this?</h4>

<fieldset class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Description)
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Available, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Location)
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Available, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @if (Model.Available)
                { @("yes")}
                else
                { @("no")}
            </p>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">Keys:</div>
        <div class="table-responsive">
            <table id="requestsets" class="table">
                <thead>
                    <tr>
                        <th>Label</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Keys.Count; i++)
                    {
                        @Html.DisplayFor(x => Model.Keys[i])
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            }
        </div>
    </div>
</fieldset>