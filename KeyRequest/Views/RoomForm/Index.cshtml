@model IEnumerable<KeyRequest.ViewModels.RoomForm>

@{
    ViewBag.Title = "Rooms";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Description
        </th>
        <th>
            Location
        </th>
        <th>
            Available
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoomFormID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RoomFormID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RoomFormID })
        </td>
    </tr>
}

</table>
