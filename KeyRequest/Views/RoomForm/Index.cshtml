@model IEnumerable<KeyRequest.ViewModels.RoomForm>

@{
    ViewBag.Title = "Rooms";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-info">
    <div class="panel-heading"></div>
    <div class="table-responsive">
        <table id="requestsets" class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Available</th>
                    <th></th>
                    <th>
                        <a href="@Url.Action("Create")" class="btn btn-success btn-xs" role="button" aria-label="Add">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@if (item.Available) { @("yes")} else { @("no")} </td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.RoomFormID })" class="btn btn-default btn-xs" role="button" aria-label="View">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Edit", new { id = item.RoomFormID })" class="btn btn-default btn-xs" role="button" aria-label="Edit">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", new { id = item.RoomFormID })" class="btn btn-danger btn-xs" role="button" aria-label="Delete">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>