@model KeyRequest.ViewModels.RequestForm

@{
    ViewBag.Title = "Delete Request";
}

<h2>@ViewBag.Title</h2>
<h4>@ViewBag.ErrorMessage</h4>
<h4>Are you sure you want to delete this?</h4>

<fieldset class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeNo, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.EmployeeNo)
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.FirstName)
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.LastName)
            </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RequestDate, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(model => model.RequestDate)
            </p>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">Request Keys For:</div>
        <div class="table-responsive">
            <table id="requestsets" class="table">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>Number of Sets</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Sets.Count; i++)
                    {
                        @Html.DisplayFor(x => Model.Sets[i])
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            }
        </div>
    </div>
</fieldset>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>