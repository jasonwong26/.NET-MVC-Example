@model IEnumerable<KeyRequest.ViewModels.RequestForm>

@{
    ViewBag.Title = "Requests";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            EmployeeNo
        </th>
        <th>
            LastName
        </th>
        <th>
            FirstName
        </th>
        <th>
            RequestDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RequestFormID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RequestFormID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RequestFormID })
        </td>
    </tr>
}

</table>
